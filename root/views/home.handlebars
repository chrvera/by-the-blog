{{#if posts.length}}
    <h1>Blog Posts</h1>
    {{#each posts}}
        <div class="post">
            <h2><a href="/post/{{id}}">{{title}}</a></h2>
            <p>{{content}}</p>
            <p>by {{User.username}} on {{createdAt}}</p>
        </div>
    {{/each}}
{{else}}
    <p>No blog posts yet.</p>
{{/if}}